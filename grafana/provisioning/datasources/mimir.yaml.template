apiVersion: 1

datasources:
  - name: Mimir
    type: prometheus
    url: http://${BACKEND_SERVICE_NAME}/api/mimir
    basicAuth: true
    basicAuthUser: ${MIMIR_SYSTEM_KEY}
    secureJsonData:
      basicAuthPassword: ${MIMIR_SYSTEM_SECRET}
    jsonData:
      httpMethod: POST
      prometheusType: Mimir
    isDefault: true
    editable: false
