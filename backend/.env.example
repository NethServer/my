# .env.example
# Copy this file to .env and fill in your values

# Logto Configuration (Required)
LOGTO_ISSUER=https://your-logto-instance.logto.app
LOGTO_AUDIENCE=your-api-resource-identifier

# JWT Custom Token Configuration (Required for token exchange)
JWT_SECRET=your-super-secret-jwt-signing-key
JWT_ISSUER=my.nethesis.it
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=168h

# Logto Management API Configuration (Required for roles/permissions)
LOGTO_MANAGEMENT_CLIENT_ID=your-management-api-client-id
LOGTO_MANAGEMENT_CLIENT_SECRET=your-management-api-client-secret
LOGTO_MANAGEMENT_BASE_URL=https://your-logto-instance.logto.app/api

# Optional Configuration
JWKS_ENDPOINT=https://your-logto-instance.logto.app/oidc/jwks
LISTEN_ADDRESS=127.0.0.1:8080
GIN_MODE=debug